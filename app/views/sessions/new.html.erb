<div class = "container">
  <div class="col-md-6 mx-auto mt-5">
  	<h1>Login using your email</h1>
    <%= form_for(:session, url: login_path) do |f| %> 

    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.submit "Log in", class: "btn btn-primary mt-3" %>
  <% end %>

  </div>
</div>