<div class = "container">
  <div class="col-md-6 col-md-offset-3">
    <% if @previous_events.count > 0 || @upcoming_events.count > 0 || @today_events.count > 0 %>
      <h1>Events: </h1>
    <% else %>
      <h1>There are no events to attend!</h1>
    <% end %>

    <%= link_to 'Create Event', new_event_path, class: 'btn btn-primary' %>

    <% if @previous_events.count > 0 %>
      <h2>Past events </h2>
      <%= render @previous_events, button: false %>
    <% end %>

    <% if @upcoming_events.count > 0 %>
      <h2> Upcoming events </h2>
      <%= render @upcoming_events, button: true %>
    <% end %>

    <% if @today_events.count > 0 %>
      <h2> Today's events </h2>
      <%= render @today_events, button: true %>
    <% end %>

  </div>
</div>
